<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="section"
            type="fr.utt.if26.mmarchan.room.entities.SectionEntity" />
        <variable
            name="handler"
            type="fr.utt.if26.mmarchan.activities.adapters.SectionListAdapter.SectionListClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/section_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@{section.name}"
            android:textSize="28sp"
            android:onLongClick="@{() -> handler.onLongClick(section.id)}" />

        <!--
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/section_item_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        -->

    </LinearLayout>

</layout>
